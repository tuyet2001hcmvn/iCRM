@model IEnumerable<ProfileCategoryModel>
@{
    string CurrentArea = ConstArea.Customer;
    string CurrentController = ConstController.ProfileConfig;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center isd-table-th-stt">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.ProfileCategoryCode)</th>
            <th>@Html.DisplayNameFor(p => p.ProfileCategoryName)</th>
            <th>@Html.DisplayNameFor(p => p.Note)</th>
            <th>@Html.DisplayNameFor(p => p.OrderIndex)</th>
            <th>@Html.DisplayNameFor(p => p.Actived)</th>
            <th class="text-center isd-table-th-action">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.ProfileCategoryCode)</td>
                <td>@Html.DisplayFor(p => item.ProfileCategoryName)</td>
                <td>@Html.DisplayFor(p => item.Note)</td>
                <td>@Html.DisplayFor(p => item.OrderIndex)</td>
                <td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.ProfileCategoryCode)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, LanguageResource.CustomerType, item.ProfileCategoryCode)
                </td>
            </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>