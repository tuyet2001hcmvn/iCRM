@model IEnumerable<ProfileLevelViewModel>
@using ISD.Core
@{
    string CurrentArea = ConstArea.Customer;
    string CurrentController = ConstController.ProfileLevel;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.CompanyId)</th>
            <th>@Html.DisplayNameFor(p => p.CustomerLevelCode)</th>
            <th>@Html.DisplayNameFor(p => p.CustomerLevelName)</th>
            <th>@Html.DisplayNameFor(p => p.LineOfLevel)</th>
            <th>@Html.DisplayNameFor(p => p.ExchangeValue)</th>
            <th>@Html.DisplayNameFor(p => p.FromDate)</th>
            <th>@Html.DisplayNameFor(p => p.ToDate)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.Actived)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.CompanyName)</td>
                <td>@Html.DisplayFor(p => item.CustomerLevelCode)</td>
                <td>@Html.DisplayFor(p => item.CustomerLevelName)</td>
                <td class="text-right">@FormatHelper.FormatCurrency(item.LineOfLevel)</td>
                <td class="text-right">@FormatHelper.FormatCurrency(item.ExchangeValue)</td>
                <td class="text-center">
                    @if (item.FromDate != null)
                    {
                        <span>@item.FromDate.Value.ToString("dd/MM/yyyy")</span>
                    }
                </td>
                <td class="text-center">
                    @if (item.ToDate != null)
                    {
                        <span>@item.ToDate.Value.ToString("dd/MM/yyyy")</span>
                    }
                </td>
                <td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.CustomerLevelId)
                    @*@HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.CustomerLevelName, item.CustomerLevelId)*@
                </td>
            </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>

