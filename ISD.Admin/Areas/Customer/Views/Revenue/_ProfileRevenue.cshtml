                <div class="row">
                    <div class="form-group col-md-12 ">
                        <div class="col-md-8 col-md-offset-5">
                            <a class="btn btn-primary btn-view-revenue" id="btn-view-revenue"><i class="fa fa-eye"></i> Xem doanh số</a>
                        </div>
                    </div>
                </div>

                <div class="content" id="contentCustomerRevenue" style="margin-top:10px;width:50%;">
                    <table class="table table-bordered table-striped table-hover no-footer">
                        <thead class="isd-table-header">
                            <tr>
                                <th class="text-center">@Html.DisplayNameFor(p => p.YEARMONTH)</th>
                                <th class="text-right">@Html.DisplayNameFor(p => p.DOANHSO)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count() > 0)
                            {
                                int i = 0;
                                foreach (var item in Model)
                                {
                                    i++;
                                    <tr>
                                        <td class="text-center">@Html.DisplayFor(p => item.YEARMONTH)</td>
                                        <td class="text-right">@FormatHelper.FormatCurrency(item.DOANHSO)</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr class="odd"><td valign="top" colspan="2" class="dataTables_empty">@LanguageResource.Grid_NoRecord</td></tr>
                            }
                        </tbody>
                        <tfoot>
                            @if ((bool?)ViewBag.IsSearchAll == true)
                            {
                                <tr>
                                    <td class="text-right"><label>@LanguageResource.Revenue_Total</label></td>
                                    <td class="text-right">@FormatHelper.FormatCurrency(Model.Sum(p => p.DOANHSO))</td>
                                </tr>
                            }
                        </tfoot>
                    </table>
                </div>

