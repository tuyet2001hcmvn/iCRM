@model IEnumerable<RoleInChargeViewModel>
@{
    string CurrentArea = ConstArea.Customer;
    string CurrentController = ConstController.RoleInCharge;
    string CurrentUrl = CurrentArea + "/" + CurrentController;
}
@if (Model != null && Model.Count() > 0)
{
    int i = 0;
    foreach (var item in Model)
    {
        i++;
<tr>
    <td class="text-center">@i</td>
    <td>@Html.DisplayFor(p => item.RoleCode)</td>
    <td>@Html.DisplayFor(p => item.RoleName)</td>
    <td>@Html.DisplayFor(p => item.CreateUser)</td>
    <td>@Html.DisplayFor(p => item.CreateTime)</td>
    <td class="text-center">
        <a class="btn btn-default btn-edit" data-id="@item.RoleInChargeId"><i class="fa fa-pencil"></i>Sửa</a>
        <a class="btn btn-danger btn-delete" data-current-url="@CurrentUrl" data-id="@item.RoleInChargeId" data-item-name="@item.RoleName" data-delete-success-call-back="ReloadRoleInChargeList">
            <i class="fa fa-trash-o"></i> Xóa
        </a>
    </td>
</tr>
    }
}
else
{
    <tr class="odd"><td valign="top" colspan="6" class="dataTables_empty">@LanguageResource.Grid_NoRecord</td></tr>
}