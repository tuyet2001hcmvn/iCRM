@model TemplateAndGiftCampaignSearchModel
@{
    ViewBag.Title = LanguageResource.TemplateAndGiftCampaign;
    string CurrentController = ConstController.TemplateAndGiftCampaign;
    string CurrentArea = ConstArea.Marketing;
    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
}
<div class="content-header clearfix">
    <h1 class="pull-left">
        @ViewBag.Title
    </h1>
    <div class="pull-right">
        <div class="pull-right">
            <div class="pull-right">
                @HtmlExtensions.CreateButton(CurrentArea, CurrentController)
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default panel-search">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "frmSearch", @class = "isd-form-search" }))
                {
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="col-md-4">
                                        @Html.TooltipLabelFor(p=>p.TemplateAndGiftCampaignCode)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(p => p.TemplateAndGiftCampaignCode, new { @class = "form-control text-box single-line" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="col-md-4">
                                        @Html.TooltipLabelFor(p => p.TemplateAndGiftCampaignName)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(p => p.TemplateAndGiftCampaignName, new { @class = "form-control text-box single-line" })
                                    </div>
                                </div>
                            </div>                        
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-5">
                                    @HtmlExtensions.SearchButton(new { data_searchType = CurrentController, data_controller = CurrentUrl })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div style="display: flex;" class="col-md-1">
                            <label style=" padding-right: 5px; padding-top: 5px;">Xem </label>
                            <select id="changeViewRow" style="display: block; width: 100%; min-height: 30px;margin-bottom:5px;-webkit-box-sizing: border-box;-moz-box-sizing: border-box;box-sizing: border-box;">
                                <option value="10">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <label style=" padding-left: 5px; padding-top: 5px;">mục </label>
                        </div>
                        <div class="pull-right">

                            <div id="pagination" class="pagination">
                            </div>
                        </div>

                    </div>
                    <div id="divSearchResult">
                        <table class="table table-bordered table-striped table-hover dataTable no-footer">
                            <thead class="isd-table-header">
                                <tr>
                                    <th class="text-center">@LanguageResource.NumberIndex</th>
                                    <th>@Html.DisplayNameFor(p => p.TemplateAndGiftCampaignCode)</th>
                                    <th>@Html.DisplayNameFor(p => p.TemplateAndGiftCampaignName)</th>
                                    <th>@Html.DisplayNameFor(p => p.TemplateAndGiftTargetGroupName)</th>
                                    <th>@Html.DisplayNameFor(p => p.CreateBy)</th>
                                    <th class="text-center">@Html.DisplayNameFor(p => p.CreateTime)</th>
                                    <th class="text-center">@LanguageResource.Actions</th>
                                </tr>
                            </thead>
                            <tbody id="tblData">
                            </tbody>
                            <tfoot></tfoot>
                        </table>
                        <p id="tblCount"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="data-template" type="x-tmpl-mustache">
      <tr>
         <td class="text-center">{{i}}</td>
        <td><a target="_blank" href="/Marketing/TemplateAndGiftCampaign/Edit/{{Id}}">{{TemplateAndGiftCampaignCode}}</a></td>
        <td><a target="_blank" href="/Marketing/TemplateAndGiftCampaign/Edit/{{Id}}">{{TemplateAndGiftCampaignName}}</a></td>
        <td><a target="_blank" href="/Marketing/emplateAndGiftTargetGroup/Edit/{{TemplateAndGiftTargetGroupId}}">{{TemplateAndGiftTargetGroupName}}</a></td>
        <td>{{{CreateBy}}}</td>
        <td class="text-center">{{{CreateTime}}}</td>
        <td class="text-center">
        <a class="btn btn-default btn-edit" data-id="{{Id}}" href="/Marketing/TemplateAndGiftCampaign/Edit/{{Id}}" target="_blank"><i class="fa fa-pencil"></i> Sửa</a>
        </td>
      </tr>
</script>
<div class="delete-confirm"></div>
@section scripts {
    <script src="~/Areas/Marketing/Scripts/jquery.twbsPagination.min.js"></script>
    <script src="~/Areas/Marketing/Scripts/mustache.min.js"></script>
    <script src="~/Areas/Marketing/Scripts/ISDNET5Common.js"></script>
    <script>
        $(document).ready(function () {
            ISDNET5.init();
            ISDNET5.initSearch("@CurrentUrl","@CurrentController", false);
        });
    </script>
}


