@model IEnumerable<ProvinceModel>
@{
    string CurrentController = ConstController.Province;

    string CurrentArea = ConstArea.MasterData;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.ProvinceCode)</th>
            <th>@Html.DisplayNameFor(p => p.ProvinceName)</th>
            <th>@Html.DisplayNameFor(p => p.Area)</th>
            <th>@Html.DisplayNameFor(p => p.OrderIndex)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.Actived)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
        <tr>
            <td class="text-center">@i</td>
            <td>@Html.DisplayFor(p => item.ProvinceCode)</td>
            <td>@Html.DisplayFor(p => item.ProvinceName)</td>
            <td class="text-right">@Html.DisplayFor(p => item.Area)</td>
            <td class="text-right">@Html.DisplayFor(p => item.OrderIndex)</td>
            <td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>
            <td class="text-center">
                @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.ProvinceId)
            </td>
        </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>


