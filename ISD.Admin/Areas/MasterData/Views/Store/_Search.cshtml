@model IEnumerable<StoreViewModel>
@{
    string CurrentController = ConstController.Store;

    string CurrentArea = ConstArea.MasterData;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.SaleOrgCode)</th>
            <th>@Html.DisplayNameFor(p => p.StoreName)</th>
            <th>@Html.DisplayNameFor(p => p.CompanyName)</th>
            <th>@Html.DisplayNameFor(p => p.ProvinceName)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.Actived)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
        <tr>
            <td class="text-center">@i</td>
            <td>@Html.DisplayFor(p => item.SaleOrgCode)</td>
            <td>@Html.DisplayFor(p => item.StoreName)</td>
            <td>@Html.DisplayFor(p => item.CompanyName)</td>
            <td>@Html.DisplayFor(p => item.ProvinceName)</td>
            <td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>
            <td class="text-center">
                @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.StoreId)
                @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.StoreName, item.StoreId)
            </td>
        </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>


