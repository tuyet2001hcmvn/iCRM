@model IEnumerable<WardViewModel>
@{
    string CurrentController = ConstController.Ward;

    string CurrentArea = ConstArea.MasterData;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.ProvinceName)</th>
            <th>@Html.DisplayNameFor(p => p.DistrictName)</th>
            <th>@Html.DisplayNameFor(p => p.WardCode)</th>
            <th>@Html.DisplayNameFor(p => p.WardName)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.ProvinceName)</td>
                <td>@Html.DisplayFor(p => item.DistrictName)</td>
                <td>@Html.DisplayFor(p => item.WardCode)</td>
                <td>@Html.DisplayFor(p => item.WardName)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.WardId)
                </td>
            </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>