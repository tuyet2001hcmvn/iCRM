@model ISD.ViewModels.AccountLoginViewModel

@{
    ViewBag.Title = LanguageResource.Permission_Login;
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="row login">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@LanguageResource.Permission_Login</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm(ConstAction.Login, ConstController.Auth, FormMethod.Post, new { @class = "form-horizontal", @id = "frmLogin" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @id = "login-validation" })
                    @Html.HiddenFor(p => p.ReturnUrl)

                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(p => p.UserName, new { @class = "control-label label-wrapper" })
                        </div>
                        <div class="col-md-9">
                            @Html.RequiredTextboxFor(p => p.UserName, new { @placeholder = LanguageResource.UserName })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(p => p.Password, new { @class = "control-label label-wrapper" })
                        </div>
                        <div class="col-md-9">
                            @Html.RequiredTextboxFor(p => p.Password, new { @type = "password", @placeholder = LanguageResource.Password })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(p => p.RememberMe, new { @class = "checkbox-login" })
                                    | @LanguageResource.RememberMe
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <input type="submit" class="btn btn-default" value="@LanguageResource.Btn_Login" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

