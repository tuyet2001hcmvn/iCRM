@model ModuleViewModel

<div class="form-group">
    <div class="col-md-3">
        @Html.TooltipLabelFor(p => p.ModuleName)
    </div>
    <div class="col-md-9">
        @Html.RequiredTextboxFor(p => p.ModuleName)
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        @Html.TooltipLabelFor(p => p.OrderIndex)
    </div>
    <div class="col-md-9">
        @Html.RequiredTextboxFor(p => p.OrderIndex)
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        @Html.TooltipLabelFor(p => p.Icon)
    </div>
    <div class="col-md-9">
        @Html.RequiredTextboxFor(p => p.Icon)
    </div>
</div>
<div class="form-group">
    <div class="col-md-3">
        @Html.TooltipLabelFor(p => p.isSystemModule)
    </div>
    <div class="col-md-9">
        @Html.EditorFor(p => p.isSystemModule)
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        @Html.TooltipLabelFor(p => p.ImageUrl)
    </div>
    <div class="col-md-9">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="/Upload/Module/@Model.ImageUrl" title="logo cho module" alt="logo cho module" />
        }
        <input type="file" name="file" title="Logo cho module" />
        <p class="help-block">Vui lòng chọn logo module.</p>
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        @Html.TooltipLabelFor(p => p.Description)
    </div>
    <div class="col-md-9">
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-3">
        @Html.TooltipLabelFor(p => p.Details)
    </div>
    <div class="col-md-9">
        @Html.TextAreaFor(p => p.Details, new { @class = "ckeditor", @id = "Details" })
        <script type="text/javascript">
            CKEDITOR.replace("Details", {
                height: 250,
                width: 800
            });
            CKEDITOR.instances['Details'].on('change',
                function () { CKEDITOR.instances['Details'].updateElement() });
            CKEDITOR.instances['Details'].on('instanceReady', function (e) {
                $("#cke_Details [id$='_top']").hide();
                this.on("focus", function () {
                    $("#cke_Details [id$='_top']").show();
                });
                this.on("blur", function () {
                    $("#cke_Details [id$='_top']").hide();
                });
            });
        </script>
    </div>
</div>