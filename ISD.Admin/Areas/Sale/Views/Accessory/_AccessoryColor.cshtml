@model IEnumerable<AccessoryViewModel>

<table id="uploadTable" class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.HelmetColorId)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.ImageUrl)</th>
            <th class="text-center action-width">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody id="imageList">
        @if (Model != null && Model.Count() > 0)
        {
            @Html.Partial("_AccessoryColorInner", Model)
        }
    </tbody>
    <tfoot id="image">
        <tr>
            <td></td>
            <td>
                @Html.DropDownList("HelmetColorCode", null, LanguageResource.Dropdownlist_All, new { @class = "form-control with-search" })
            </td>
            <td>
                <input type="file" class="form-control text-box single-line" id="ImageUrl" name="ImageUrl" />
            </td>
            <td class="text-center">
                <a class="btn btn-warning btn-add-row">
                    @LanguageResource.Btn_AddRow
                </a>
            </td>
        </tr>
    </tfoot>
</table>
