@model IEnumerable<AccessoryCategoryModel>
@{
    string CurrentController = ConstController.AccessoryCategory;

    string CurrentArea = ConstArea.Sale;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.AccessoryCategoryCode)</th>
            <th>@Html.DisplayNameFor(p => p.AccessoryCategoryName)</th>
            <th>@Html.DisplayNameFor(p => p.ImageUrl)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.Actived)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
        <tr>
            <td class="text-center">@i</td>
            <td>@Html.DisplayFor(p => item.AccessoryCategoryCode)</td>
            <td>@Html.DisplayFor(p => item.AccessoryCategoryName)</td>
            <td class="text-center">
                @if (item.ImageUrl != null)
                {
                    <img class="image-search-view" src="/Upload/AccessoryCategory/@item.ImageUrl" />
                }
                else
                {
                    <img class="image-search-view" src="/Upload/AccessoryCategory/noimage.jpg" />
                }
            </td>
            <td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>
            <td class="text-center">
                @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.AccessoryCategoryId)
                @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.AccessoryCategoryName, item.AccessoryCategoryId)
            </td>
        </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>


