@model IEnumerable<Search_PeriodicallyCheckingViewModel>
@{
    string CurrentController = ConstController.PeriodicallyChecking;

    string CurrentArea = ConstArea.Sale;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.PeriodicallyCheckingCode)</th>
            <th>@Html.DisplayNameFor(p => p.PeriodicallyCheckingName)</th>
            <th class="text-center product-number">@Html.DisplayNameFor(p => p.NumberOfProduct)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.Actived)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.PeriodicallyCheckingCode)</td>
                <td>@Html.DisplayFor(p => item.PeriodicallyCheckingName)</td>
                <td class="text-right">@Html.DisplayFor(p => item.NumberOfProduct)</td>
                <td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.PeriodicallyCheckingId)
                </td>
            </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>


