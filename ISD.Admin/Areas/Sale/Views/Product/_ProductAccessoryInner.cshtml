@model IEnumerable<ProductViewModel>

@{
    int i = 0;
    int k = -1;
}

@if (Model != null && Model.Count() > 0)
{
    foreach (var item in Model)
    {
        i++;
        k++;
        <input type="hidden" name="accessoryList[@k].STT" value="@i">
        <input type="hidden" name="accessoryList[@k].AccessoryCategoryId" value="@item.AccessoryCategoryId" />
        <input type="hidden" name="accessoryList[@k].AccessoryCategoryName" value="@item.AccessoryCategoryName" />
        <input type="hidden" name="accessoryList[@k].AccessoryId" value="@item.AccessoryId" />
        <input type="hidden" name="accessoryList[@k].AccessoryName" value="@item.AccessoryName" />
        <input type="hidden" name="accessoryList[@k].Price" value="@item.Price" />

        <input type="hidden" name="accessoryList[@k].ProductCode" value="@item.ProductCode" />
        <input type="hidden" name="accessoryList[@k].ProductName" value="@item.ProductName" />
        <input type="hidden" name="accessoryList[@k].ERPProductCode" value="@item.ERPProductCode" />
        <tr>
            <td class="text-center">
                @i
            </td>
            <td>
                @item.AccessoryCategoryName
            </td>
            <td>
                @item.AccessoryName
            </td>
            <td class="text-right price-currency">
                @string.Format("{0:n0}", item.Price)
            </td>
            <td class="text-center">
                <a class="btn btn-danger btn-del-product" data-id="@i" data-row="3">
                    @LanguageResource.Btn_Delete
                </a>
            </td>
        </tr>
    }
}

