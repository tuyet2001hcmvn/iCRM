@model IEnumerable<ContactDetailViewModel>

<table id="uploadTable" class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.Title)</th>
            <th>@Html.DisplayNameFor(p => p.Phone)</th>
            <th>@Html.DisplayNameFor(p => p.DisplayPhone)</th>
            <th>@Html.DisplayNameFor(p => p.OrderIndex)</th>
            <th class="text-center action-width">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody id="detailList">
        @if (Model != null && Model.Count() > 0)
        {
            @Html.Partial("_ContactDetailInner", Model)
        }
    </tbody>
    <tfoot id="detail">
        <tr>
            <td></td>
            <td class="text-center">
                <input type="text" class="form-control text-box single-line" id="Title" name="Title" />
            </td>
            <td class="text-center">
                <input type="text" class="form-control text-box single-line" id="Phone" name="Phone" />
            </td>
            <td class="text-center">
                <input type="text" class="form-control text-box single-line" id="DisplayPhone" name="DisplayPhone" />
            </td>
            <td class="text-center">
                <input type="text" class="form-control text-box single-line" id="OrderIndex" name="OrderIndex" />
            </td>
            <td class="text-center">
                <a class="btn btn-warning btn-add-detail">
                    @LanguageResource.Btn_AddRow
                </a>
            </td>
        </tr>
    </tfoot>
</table>
