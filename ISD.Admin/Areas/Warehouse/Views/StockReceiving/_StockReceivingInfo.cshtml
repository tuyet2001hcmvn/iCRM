@model ProfileViewModel


<div id="collapse-customer" class="panel-collapse collapse in">
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-6">
                    <div class="col-md-4">
                        @Html.TooltipLabelFor(p => p.ProfileCode)
                    </div>
                    <div class="col-md-8">
                        <div class="display-for" id="DisplayCustomerCode">
                            @if (Model.ProfileCode != 0)
                            {
                                @Html.DisplayFor(p => p.ProfileCode)
                            }
                        </div>
                        @Html.HiddenFor(p => p.ProfileId)
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="col-md-4">
                        @Html.TooltipLabelFor(p => p.ProfileName)
                    </div>
                    <div class="col-md-8">
                        <div class="display-for" id="ProfileName">
                            @Html.DisplayFor(p => p.ProfileName)
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-6">
                    <div class="col-md-4">
                        @Html.TooltipLabelFor(p => p.ProvinceId)
                    </div>
                    <div class="col-md-8">
                        <div class="display-for" id="ProvinceName">
                            @Html.DisplayFor(p => p.ProvinceName)
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="col-md-4">
                        @Html.TooltipLabelFor(p => p.DistrictId)
                    </div>
                    <div class="col-md-8">
                        <div class="display-for" id="DistrictName">
                            @Html.DisplayFor(p => p.DistrictName)
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-6">
                    <div class="col-md-4">
                        @Html.TooltipLabelFor(p => p.Phone)
                    </div>
                    <div class="col-md-8">
                        <div class="display-for" id="PhoneNumber">
                            @Html.DisplayFor(p => p.Phone)
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="col-md-4">
                        @Html.TooltipLabelFor(p => p.Email)
                    </div>
                    <div class="col-md-8">
                        <div class="display-for" id="Email">
                            @Html.DisplayFor(p => p.Email)
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
