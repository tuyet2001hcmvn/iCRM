@model IEnumerable<TaskViewModel>
@{
    string CurrentArea = ConstArea.Work;
    string CurrentController = ConstController.Task;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.TaskCode)</th>
            <th>@Html.DisplayNameFor(p => p.Summary)</th>
            <th>@Html.DisplayNameFor(p => p.ProfileId)</th>
            <th>@Html.DisplayNameFor(p => p.Description)</th>
            <th>@Html.DisplayNameFor(p => p.PriorityCode)</th>
            <th>@Html.DisplayNameFor(p => p.WorkFlowId)</th>
            <th>@Html.DisplayNameFor(p => p.TaskStatusId)</th>
            <th>@Html.DisplayNameFor(p => p.ReceiveDate)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.TaskCode)</td>
                <td>@Html.DisplayFor(p => item.Summary)</td>
                <td>@Html.DisplayFor(p => item.ProfileName)</td>
                <td>@Html.DisplayFor(p => item.Description)</td>
                <td>@Html.DisplayFor(p => item.PriorityText_vi)</td>
                <td>@Html.DisplayFor(p => item.WorkFlowName)</td>
                <td>@Html.DisplayFor(p => item.TaskStatusName)</td>
                <td>@Html.DisplayFor(p => item.ReceiveDate)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.TaskId)
                </td>
            </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>

