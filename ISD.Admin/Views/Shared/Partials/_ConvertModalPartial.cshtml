@* Convert Confirm *@
<div id="divConvertPopup" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="btn-cancel-convert"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Chuyển "<span class="item-name"></span>" thành Update dự án</h4>
            </div>
            <form id="frmConvertConfirm">
                @Html.AntiForgeryToken()
                @Html.Hidden("id")
                @Html.Hidden("controller")
                <div class="form-horizontal">
                    <div class="modal-body">
                        <div class="row text-center alert-message">
                            @LanguageResource.Confirm_ConfirmConvert
                        </div>
                    </div>
                    <div class="modal-footer">
                        <span class="btn btn-default" data-dismiss="modal" id="btn-cancel-convert">@LanguageResource.Confirm_No</span>
                        <a class="btn btn-primary pull-right" id="btn-confirm-convert" data-tab="">
                            @LanguageResource.Confirm_Yes
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>