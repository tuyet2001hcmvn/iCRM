@model IEnumerable<Warranty.Models.TaskTicketViewModel>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 10px">#</th>
            <th>Mã yêu cầu</th>
            <th>Nội dung yêu cầu</th>
            <th>Ngày yêu cầu</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            var i = 0;

            foreach (var item in Model)
            {
                i++;
                <tr>
                    <td class="text-center">@i</td>
                    <td>@Html.DisplayFor(p => item.TaskCode)</td>
                    <td>@Html.DisplayFor(p => item.Summary)</td>
                    <td class="text-center">@Html.DisplayFor(p => item.CreateTime)</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td class="text-center" colspan="4">Chưa có yêu cầu bảo hành nào!</td>
            </tr>
        }

    </tbody>
</table>
